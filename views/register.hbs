<section class="card border-0 mb-4 mx-auto" style="max-width: 444px;">
  <div class="card-body border  rounded-bottom">
    <h2 class="mb-4">Регистрация</h2>
    <form method="POST">
      <div class="mb-3">
        <label class="form-label">Имя</label>
        {{#if errors.name }}
          <input type="text" name="name" class="form-control is-invalid" value="{{ fields.name }}">
          <div class="invalid-feedback">{{ errors.name }}</div>
        {{else}}
          <input type="text" name="name" class="form-control" value="{{ fields.name }}">
        {{/if}}
      </div>
      <div class="mb-3">
        <label class="form-label">Логин</label>
        {{#if errors.login }}
          <input type="text" name="login" class="form-control is-invalid" value="{{ fields.login }}">
          <div class="invalid-feedback">{{ errors.login }}</div>
        {{else}}
          <input type="text" name="login" class="form-control" value="{{ fields.login }}">
        {{/if}}
      </div>
      <div class="mb-3">
        <label class="form-label">Пароль</label>
        {{#if errors.password }}
          <input type="password" name="password" class="form-control is-invalid" value="{{ fields.password }}">
          <div class="invalid-feedback">{{ errors.password }}</div>
        {{else}}
          <input type="password" name="password" class="form-control" value="{{ fields.password }}">
        {{/if}}
      </div>
      <div class="mb-3">
        <label class="form-label">Повторите пароль</label>
        {{#if errors.passwordConfirm }}
          <input type="password" name="passwordConfirm" class="form-control is-invalid" value="{{ fields.passwordConfirm }}">
          <div class="invalid-feedback">{{ errors.passwordConfirm }}</div>
        {{else}}
          <input type="password" name="passwordConfirm" class="form-control" value="{{ fields.passwordConfirm }}">
        {{/if}}
      </div>
      <div class="mb-3">
        Есть аккаунт? <a href="/login">Войти</a>
      </div>
      <div class="mb-3">
        <button class="btn  btn-light">Зарегистрироваться</button>
      </div>
    </form>
  </div>
</section>